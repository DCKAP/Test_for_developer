<%= form_for(@task_entry) do |f| %>
  <% if @task_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task_entry.errors.count, "error") %> prohibited this task_entry from being saved:</h2>
      <ul>
      <% @task_entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table border="0">
    <tr>
      <td>
        Task Name
      </td>
      <td>
        <%= f.text_field :task_name %>
      </td>
    </tr>
    <tr>
      <td valign="top">
        Task Description
      </td>
      <td>
        <%= f.text_area :task_description , :rows => 4, :cols => 34 %>
      </td>
    </tr>
    <tr>
      <td valign="top">
        Deadline
      </td>
      <td>
        <%= f.text_field :deadline %> (Hours)
      </td>
    </tr>
    <tr>
      <td valign="top">
        Status
      </td>
      <td>
        <%= f.collection_select :task_status_id,TaskStatus.all,:id,:status_name,{},{:style => 'width:267px;'} %>
      </td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
